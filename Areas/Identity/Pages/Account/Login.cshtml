@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h2 class="mb-4 text-center">@ViewData["Title"]</h2>

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <form id="account" method="post">
                    <h4 class="mb-3 text-center">Welcome Back!</h4>
                    <hr />

                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" placeholder="Password" />
                        <label asp-for="Input.Password">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label asp-for="Input.RememberMe" class="form-check-label">
                            Remember Me
                        </label>
                    </div>

                    <button id="login-submit" type="submit" class="w-100 btn btn-primary">Log in</button>

                    <div class="text-center mt-3">
                        <a asp-page="./ForgotPassword" class="small">Forgot your password?</a>
                    </div>
                </form>
            </div>
        </div>

        <div class="text-center mt-3">
            <p class="mb-1">New here? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="fw-bold">Create an account</a></p>
            <p><a asp-page="./ResendEmailConfirmation" class="small">Resend email confirmation</a></p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
