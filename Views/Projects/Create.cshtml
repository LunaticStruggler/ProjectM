@model ProjectManagementApp.Models.Project

@{
    ViewData["Title"] = "Create Project";
}

<h2 class="mb-4">Create New Project</h2>

<div class="card p-4 shadow-sm">
    <form asp-action="Create">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" placeholder="Enter project name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control" placeholder="Enter project description" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Company" class="control-label"></label>
            <input asp-for="Company" class="form-control" placeholder="Enter company name" />
            <span asp-validation-for="Company" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label asp-for="Status" class="control-label"></label>
            <select asp-for="Status" class="form-control">
                <option value="">-- Select Status --</option>
                <option value="Not Started">Not Started</option>
                <option value="Ongoing">Ongoing</option>
                <option value="Completed">Completed</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary">Create Project</button>
        </div>
    </form>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to Project List</a>
</div>